{
  "name": "flequit",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "paraglide:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide --strategy cookie preferredLanguage baseLocale",
    "dev": "vite dev --host",
    "dev:e2e": "vite dev --port 10000 --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "lint": "eslint .",
    "lint:arch": "eslint src/lib",
    "format": "prettier --write .",
    "check": "bun run paraglide:compile && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun run paraglide:compile && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:e2e": "npx playwright test",
    "test:prepare:automerge": "mkdir -p .tmp/tests/cargo/flequit-infrastructure-automerge/automerge .tmp/tests/cargo/flequit-infrastructure-automerge/json",
    "test:prepare:db": "cargo run --manifest-path src-tauri/Cargo.toml -p flequit-infrastructure-sqlite --bin migration_runner -- .tmp/tests/test_database.db",
    "test:prepare:db:force": "cargo run --manifest-path src-tauri/Cargo.toml -p flequit-infrastructure-sqlite --bin migration_runner -- .tmp/tests/test_database.db --force",
    "test:prepare": "bun run test:prepare:automerge && bun run test:prepare:db",
    "tauri": "export RUST_LOG=debug && tauri",
    "tauri:dev": "export RUST_LOG=debug && tauri dev --host",
    "machine-translate": "inlang machine translate --project project.inlang"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@thisux/sveltednd": "^0.0.20",
    "bits-ui": "^2.16.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-svelte": "^0.525.0",
    "mode-watcher": "^1.1.0",
    "paneforge": "^1.0.2",
    "tailwind-merge": "^3.5.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@inlang/cli": "^3.1.6",
    "@inlang/paraglide-js": "2.2.0",
    "@internationalized/date": "^3.11.0",
    "@lucide/svelte": "^0.515.0",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tauri-apps/cli": "^2.10.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.13",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.53.3",
    "svelte-check": "^4.4.3",
    "svelte-sonner": "^1.0.7",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.56.1",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "^6.4.1",
    "vite-plugin-devtools-json": "^0.3.0",
    "vitest": "^3.2.4"
  }
}
